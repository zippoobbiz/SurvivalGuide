<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.assignment.xiaoduo.survivalguidefit4039assignment">

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name="com.assignment.xiaoduo.survivalguide.configurations.MyApplication">
        <activity
            android:name="com.assignment.xiaoduo.survivalguide.activities.LoginLoadingActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.assignment.xiaoduo.survivalguide.activities.MainActivity"
            android:label="@string/main_activity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name="com.assignment.xiaoduo.survivalguide.activities.ListViewFilterActivity"
            android:label="@string/list_view_filter_activity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name="com.assignment.xiaoduo.survivalguide.activities.ComposeActivity"
            android:label="@string/compose_activity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Compose"
            android:windowSoftInputMode="stateAlwaysHidden"></activity>
        <activity
            android:name="com.assignment.xiaoduo.survivalguide.activities.ReadArticleActivity"
            android:label="@string/title_activity_read_article"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden"></activity>
        <activity
            android:name="com.assignment.xiaoduo.survivalguide.activities.CroperActivity"
            android:label="@string/croper_activity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name="com.assignment.xiaoduo.survivalguide.activities.WriteReplyActivity"
            android:label="@string/title_activity_write_reply"></activity>

    </application>

</manifest>
